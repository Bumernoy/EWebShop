@using BuildSeller.Core
@model IEnumerable<BuildSeller.Core.Model.BuildCategories>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<h2>@Html.Raw(@ViewBag.Message)</h2>
@if (RolesManager.IsUserInRole(User.Identity.Name, UsersRoles.Administrator))
{
    <p>
        @Html.ActionLink(Langs.Lang.Create, "Create")
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CatName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CatName)
            </td>
            @if (RolesManager.IsUserInRole(User.Identity.Name, UsersRoles.Administrator))
            {
                <td>
                    @Html.ActionLink(Langs.Lang.Details, "Details", new { id = item.Id }) |
                      @Html.ActionLink(Langs.Lang.Delete, "Delete", new { id = item.Id })
                </td>
            }
        </tr>
    }

</table>
